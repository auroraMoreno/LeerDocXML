@model Album

    <h1>Editar album: </h1>

    <form method="post">
        <input type="hidden" name="idAlbum" value="@Model.Id"/>
        <br />
        <label>Título</label>
        <input type="text" name="titulo" value="@Model.Titulo"/>
        <br />
        <label>Autor: </label>
        <input type="text" name="autor" value="@Model.Autor" />
        <br />
        <label>Fecha de publicación: </label>
        <input type="text" name="fechaPublicacion" value="@Model.FechaPublicacion" />
        <br />
        <button type="submit">Crear</button>
    </form>