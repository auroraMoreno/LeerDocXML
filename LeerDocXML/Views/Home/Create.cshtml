@model Album

<h1>Añadir nuevo album: </h1>

<form method="post">
    <label>ID</label>
    <input type="text" name="id"/>
    <br/>
    <label>Título</label>
    <input type="text" name="titulo"/>
    <br/>
    <label>Autor: </label>
    <input type="text" name="autor"/>
    <br/>
    <label>Fecha de publicación: </label>
    <input type="text" name="fechaPublicacion"/>
    <br/>
    <button type="submit">Crear</button>
</form>